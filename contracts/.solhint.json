{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", "^0.7.0 || ^0.8.0"],
    "custom-errors": "warn",
    "prettier/prettier": "error",
    "max-line-length": "off",
    "check-send-result": "off",
    "not-rely-on-time": "off",
    "multiple-sends": "off",
    "quotes": "warn",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
