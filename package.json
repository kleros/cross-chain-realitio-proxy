{
  "name": "@kleros/cross-chain-realitio-proxy",
  "version": "0.1.0",
  "description": "Cross-chain arbitration proxy for Realitio",
  "main": "index.js",
  "repository": "git@github.com:kleros/cross-chain-realitio-proxy.git",
  "author": "Kleros",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.8.7",
  "scripts": {
    "lint": "lint:js && lint:sol",
    "lint:js": "eslint .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fix": "fix:js && fix:sol",
    "fix:js": "eslint --fix '**/*.js'",
    "fix:sol": "prettier --write 'contracts/**/*.sol'",
    "prepare": "husky install"
  },
  "workspaces": [
    "bots",
    "contracts",
    "dynamic-script",
    "evidence-display"
  ],
  "devDependencies": {
    "eslint": "5.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.1.0"
  }
}
